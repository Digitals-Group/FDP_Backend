generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(cuid())
  email         String? @unique
  phone         String? @unique
  fullName      String?
  isAllowedCash Boolean @default(true)

  role Role @default(CLIENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  CLIENT
  ADMIN
  ROOT
}
